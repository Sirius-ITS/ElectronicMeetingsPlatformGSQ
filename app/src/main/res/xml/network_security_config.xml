<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- ✅ AGGRESSIVE: Trust ALL certificates in base config for development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- ✅ Explicitly configure the development server domain -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">109.123.243.32</domain>
        <trust-anchors>
            <!-- Accept ANY certificate for this domain -->
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
</network-security-config>